<h1>Edit Company Info</h1>

<%= form_for @company, html: {class: "input_form"} do |f| %>

  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name, size: "50x10" %>
  </p>

  <p>
  <%= f.label :industry %><br />
  <%= f.text_field :industry, size: "50x10" %>
  </p>

  <p>
  <%= f.label :location %><br />
  <%= f.text_field :location, size: "50x10" %>
  </p>

  <p>
  <%= f.label :description %><br />
  <%= f.text_area :description, size: "60x12" %>
  </p>

  <p>
  <%= f.submit "Create" %>
  </p>
<% end %>


<%= link_to "Back", company_path(@company) %>
